@page "/not-found"

<MudPaper Class="pa-4" Elevation="4">
    <MudText Typo="Typo.h4" Color="Color.Error">404 - Page Not Found</MudText>
    <MudText Typo="Typo.body1">Sorry, the page you are looking for could not be found.</MudText>
    <MudButton Variant="Variant.Filled" Color="Color.Primary" OnClick="NavigateHome">Go to Home</MudButton>
</MudPaper>

@code {
    [Inject] NavigationManager Navigation { get; set; }

    private void NavigateHome() => Navigation.NavigateTo("/");
}
